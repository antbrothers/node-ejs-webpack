  position: absolute;
  top: 0px;
  right: 8vw;
  margin: 3.2vw;
}
.goald4.goald_main .help_main .help_icon {
  width: 4.26vw;
  height: 4.26vw;
}
.goald4.goald_main .help_cont {
  width: 95%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 auto;
}
.goald4.goald_main .help_cont .logo-g {
  width: 6.4vw;
  height: 6.4vw;
}
.goald4.goald_main .help_cont .help {
  font-size: 3.2vw;
