  width: 100%;
  height: 37.33vw;
  margin: 0 auto;
  text-align: center;
  border-radius: 1.06vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goald4.goald_main .goald_top .goald_title {
  font-size: 4.53vw;
  font-weight: bold;
  color: #ffffff;
