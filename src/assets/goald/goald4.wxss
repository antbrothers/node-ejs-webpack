  text-align: center;
  position: relative;
}
.goald4.goald_main .goadl_content .goald_btn {
  width: 45.0vw;
  height: 10.66vw;
  background: #18b868;
  border-radius: 0.53vw;
  text-align: center;
  line-height: 10.66vw;
  font-size: 4.26vw;
  font-weight: 500;
  color: #ffffff;
  position: absolute;
  bottom: 0;
  left: 50%;
