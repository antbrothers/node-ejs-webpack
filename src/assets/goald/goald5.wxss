  overflow: hidden;
}
.goald5.goald_main .goald_top {
  display: block;
  width: 100%;
  height: 33.86vw;
  background: linear-gradient(315deg, #ff5a2a 0%, #e2231a 100%);
  margin: 0 auto;
  text-align: center;
  /* // border-radius:8px;  */
